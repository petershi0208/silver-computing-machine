<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.yhtech.rent.dao.IHouseDao">
	
    <!-- 查询全部 -->
	<select id="listAll" resultType="com.yhtech.rent.domain.House">
         select * from house order by date desc
    </select>
    <!-- 根据姓名模糊查询 -->
    <select id="findByName" resultType="com.yhtech.rent.domain.House" parameterType="String">
    	select * from house where renter_name like CONCAT('%',#{renter_name},'%') 
    </select>
	<!-- 根据id查询-->
	<select id="findByHouseid" resultType="com.yhtech.rent.domain.House" parameterType="String">
		select * from house where house_id=#{house_id}
	</select>
    <!-- 添加数据 -->
    <insert id="add" parameterType="com.yhtech.rent.domain.House">
    	insert into house(house_id,renter_telephone,renter_phone,renter_name,money,date,mode)
    	values(#{house_id},#{renter_telephone},#{renter_phone},#{renter_name},#{money},#{date},#{mode})
    </insert>
    <!-- 修改数据 -->
	<update id="update" parameterType="com.yhtech.rent.domain.House">
		update house
		<set>
			<if test="renter_telephone!=null and renter_telephone!=''">
				renter_telephone=#{renter_telephone},
			</if>
			<if test="renter_phone!=null and renter_phone!=''">
				renter_phone=#{renter_phone},
			</if>
			<if test="renter_name!=null and renter_name!=''">
				renter_name=#{renter_name},
			</if>
			<if test="money!=null and money!=''">
				money=#{money},
			</if>
			<if test="date!=null and date!=''">
				date=#{date},
			</if>
			<if test="mode!=null and mode!=''">
				mode=#{mode}
			</if>
		</set>
		where house_id=#{house_id}
	</update>
</mapper>